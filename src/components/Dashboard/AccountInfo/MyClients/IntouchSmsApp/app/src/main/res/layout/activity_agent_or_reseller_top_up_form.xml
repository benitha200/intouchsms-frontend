<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AgentOrResellerTopUpForm">

    <ScrollView
        android:id="@+id/scrollview_reseller_agent_top_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <android.support.v7.widget.CardView
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:background="@color/loginsignupBackgroundTint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="PRICE INFORMATION"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:background="@color/agentorresellerpackagetint"
                            android:id="@+id/agent_reseller_package"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputEditText
                                android:backgroundTint="@color/transparent"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:enabled="true"
                                android:hint="Package"
                                android:inputType="text"
                                android:textColor="@color/cardview_dark_background"
                                android:textColorHighlight="@color/cardview_dark_background"
                                android:textColorHint="@color/cardview_dark_background"
                                android:textColorLink="@color/cardview_dark_background"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/agent_reseller_select_package"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="right"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="35sp"
                            android:text="Select"
                            android:background="@color/colorPrimary"/>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/agent_reseller_creditrange_from"
                                android:layout_width="140dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:backgroundTint="@color/transparent"
                                    android:layout_weight="1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="true"
                                    android:hint="Credits Range(From)"
                                    android:inputType="text"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textColorHighlight="@color/cardview_dark_background"
                                    android:textColorHint="@color/cardview_dark_background"
                                    android:textColorLink="@color/cardview_dark_background"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                android:layout_weight="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:text="To"
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/agent_reseller_creditrange_to"
                                android:layout_width="140dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:backgroundTint="@color/transparent"
                                    android:layout_weight="1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="true"
                                    android:hint="Credits Range(To)"
                                    android:inputType="text"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textColorHighlight="@color/cardview_dark_background"
                                    android:textColorHint="@color/cardview_dark_background"
                                    android:textColorLink="@color/cardview_dark_background"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/agent_reseller_pricerange_from"
                                android:layout_width="140dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:backgroundTint="@color/transparent"
                                    android:layout_weight="1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="true"
                                    android:hint="Price Range(From)"
                                    android:inputType="text"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textColorHighlight="@color/cardview_dark_background"
                                    android:textColorHint="@color/cardview_dark_background"
                                    android:textColorLink="@color/cardview_dark_background"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                android:layout_weight="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:text="To"
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/agent_reseller_pricerange_to"
                                android:layout_width="140dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:backgroundTint="@color/transparent"
                                    android:layout_weight="1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="true"
                                    android:hint="Price Range(To)"
                                    android:inputType="text"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textColorHighlight="@color/cardview_dark_background"
                                    android:textColorHint="@color/cardview_dark_background"
                                    android:textColorLink="@color/cardview_dark_background"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="5dp"
                        android:id="@+id/agent_reseller_top_up_unitprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:backgroundTint="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:hint="Unit Price"
                            android:inputType="number"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_dark_background"
                            android:textColorLink="@color/cardview_dark_background"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/agent_reseller_top_up_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:backgroundTint="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:hint="Quantity"
                            android:inputType="number"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_dark_background"
                            android:textColorLink="@color/cardview_dark_background"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/agent_reseller_top_up_price_tax_excl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:backgroundTint="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:hint="Total Price Tax Excl"
                            android:inputType="number"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_dark_background"
                            android:textColorLink="@color/cardview_dark_background"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/agent_reseller_top_up_vat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:backgroundTint="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:hint="VAT(18%)"
                            android:inputType="number"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_dark_background"
                            android:textColorLink="@color/cardview_dark_background"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/agent_reseller_top_up_price_tax_incl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:backgroundTint="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:hint="Total Price Tax Incl"
                            android:inputType="number"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_dark_background"
                            android:textColorLink="@color/cardview_dark_background"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="4dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">

                        <TextView
                            android:gravity="center_vertical"
                            android:id="@+id/agent_reseller_tv_paymentmethod_title"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Payment Method:"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="13sp" />

                        <Spinner
                            android:id="@+id/agent_reseller_spn_topup_payment_methods"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignBottom="@+id/agent_reseller_tv_paymentmethod_title"
                            android:layout_toEndOf="@+id/agent_reseller_tv_paymentmethod_title"
                            android:gravity="center" />

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/agent_reseller_top_up_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:counterEnabled="true"
                        app:counterMaxLength="10"
                        app:errorEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:maxLength="10"
                            android:hint="Phone Number"
                            android:inputType="number"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_dark_background"
                            android:textColorLink="@color/cardview_dark_background"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/loginsignupBackgroundTint"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/agent_reseller_top_up_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:hint="Amount"
                            android:inputType="number"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_dark_background"
                            android:textColorLink="@color/cardview_dark_background"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/loginsignupBackgroundTint"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/agent_reseller_btn_submit_topup"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/colorPrimary"
                android:padding="4dp"
                android:text="SUBMIT"
                android:textColor="#ffffff"
                android:textSize="13sp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>