<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_marginTop="3dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/CustomTextAppearance"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:text="Phone Numbers(Separated with comma)"
                    android:textSize="15sp"
                    android:gravity="left"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textColor="@color/cardview_dark_background"
                    android:textCursorDrawable="@drawable/loginsignup_color_cursor"
                    android:textSize="15sp"
                    android:gravity="top|left"
                    android:lines="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone_numbers"
                    android:backgroundTint="@color/loginsignupBackgroundTint"/>

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <ImageButton
                    android:backgroundTint="@color/activity5SplitterGray"
                    android:background="@color/agentorresellerpackagetint"
                    android:id="@+id/uploadcontactsbyphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/phonebook_icon"/>


                <ImageButton
                    android:backgroundTint="@color/activity5SplitterGray"
                    android:background="@color/agentorresellerpackagetint"
                    android:id="@+id/uploadcontactsbyexcel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/excel_icon"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/customsendername1">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/tv_sendername_sp"
                        android:layout_width="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:layout_height="fill_parent"
                        android:text="FROM(Sender Name):"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp" />

                    <Spinner
                        android:id="@+id/spn_sendername"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignBottom="@+id/tv_sendername_sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@+id/tv_sendername_sp"
                        android:gravity="center" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:id="@+id/customsendername2"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/CustomTextAppearance"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:text="Sender Name(Characters, Numbers less than 11)"
                    android:textSize="15sp"
                    android:gravity="left"
                    android:layout_height="wrap_content" />

                <EditText
                    android:maxLength="11"
                    android:inputType="text"
                    android:textColor="@color/cardview_dark_background"
                    android:textCursorDrawable="@drawable/loginsignup_color_cursor"
                    android:textSize="15sp"
                    android:gravity="top|left"
                    android:id="@+id/sendername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/loginsignupBackgroundTint"/>

            </LinearLayout>

            <TextView
                android:textAppearance="@style/CustomTextAppearance"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:text="Message: "
                android:textSize="15sp"
                android:gravity="left"
                android:layout_height="wrap_content" />

            <!--The below was a cardview-->
            <RelativeLayout
                android:layout_marginTop="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <EditText
                    android:textColor="@color/cardview_dark_background"
                    android:textCursorDrawable="@drawable/loginsignup_color_cursor"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/message_tobe_sent"
                    android:gravity="top|left"
                    android:backgroundTint="@color/edittextsendmessage"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/messagecount"
                android:textAppearance="@style/CustomTextAppearance"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Characters of message 1."
                android:layout_gravity="right|end"/>

            <Button
                android:layout_marginTop="4dp"
                android:layout_marginBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/btn_send_sms"
                android:text="Send"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:background="@color/colorAccent"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>